#!/bin/bash

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install it and ensure it's in your PATH."
    exit 1
fi

# Start minikube with Docker driver
echo "ğŸš€ Starting Minikube cluster with Docker..."
minikube start --driver=docker

# Wait a bit to ensure cluster is initialized
sleep 5

# Show cluster info
echo "â„¹ï¸ Checking cluster info..."
kubectl cluster-info || {
    echo "âŒ Failed to retrieve cluster info. Is kubectl installed and configured?"
    exit 1
}

# Get pods (in all namespaces for completeness)
echo "ğŸ“¦ Retrieving pods..."
kubectl get pods --all-namespaces

echo "âœ… Kubernetes cluster is up and running."
